<!--This is for the Loginpage View-->

<!DOCTYPE html>
<html lang="en">
    <body>
        <div id = "Login Page"></div>  <!--This identifies the page as the login page--->
        
        <%- include('layouts/navbar');-%> <!--This calls the navbarlogin.ejs page-->
        <%- include('layouts/header');-%>   <!--This calls the header.ejs page-->

        <section class = site-body>
        <hr/>
        <br/>
        <h2>Current Loginpage Under Construction</h2>
        <br/>
        <h3>This page will give information about Login</h3>
        <br/>
        <h4>Application Information to follow:</h4>
        <br/>
        <hr/>
        <!---Login form-->
        <br>
        <h2>User Login:</h2>
        <br>
        <form action="/userLogin/login" method="POST">
        <div class="site-login">
            <label>User-Name:</label>
            <br>
            <input type="text" placeholder="Please enter username" id="username" name="username">
            <br>
            <label>Password:</label>
            <br>
            <input type="password" placeholder="Please enter password" id="password" name="password">
            <br>
            <br>
            <button type="submit" class="signin-btn">Login</button>
            <br>
            <br>
        </div>
        </form>
        </section>
        <%- include('layouts/footer');-%>   <!--This calls the footer.ejs page-->
        </div>
    </body>
</html>